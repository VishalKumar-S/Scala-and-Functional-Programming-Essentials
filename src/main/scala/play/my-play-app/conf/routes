GET    /greetInJson/:name             controllers.HomeController.greetNameinJson(name: String)

GET    /getData         controllers.HomeController.getDataAsync


GET     /users/:id          controllers.HomeController.getUserById(id: Long)


GET    /users           controllers.HomeController.getUserById(id: Long)


GET  /listAllUsers    controllers.HomeController.listUsers()

PUT     /users/:id              controllers.HomeController.updateUser(id: Long)

